<?xml version="1.0" encoding="UTF-8"?>
<survey>
    <title>Encuesta de Satisfacción</title>
    <description>Por favor responde las siguientes preguntas</description>
    <questions>
        <question type="multiple-choice" required="true">
            <text>¿Cómo calificarías nuestro servicio?</text>
            <options>
                <option>Excelente</option>
                <option>Muy bueno</option>
                <option>Bueno</option>
                <option>Regular</option>
                <option>Malo</option>
            </options>
        </question>
        <question type="text" required="true">
            <text>¿Qué aspecto crees que deberíamos mejorar?</text>
        </question>
        <question type="multiple-choice" required="false">
            <text>¿Cómo nos conociste?</text>
            <options>
                <option>Redes sociales</option>
                <option>Recomendación</option>
                <option>Búsqueda en internet</option>
                <option>Publicidad</option>
                <option>Otro</option>
            </options>
        </question>
        <question type="scale" required="true">
            <text>¿Qué probabilidad hay de que nos recomiendes?</text>
            <options>
                <option>1 (Nada probable)</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5 (Muy probable)</option>
            </options>
        </question>
        <question type="text" required="false">
            <text>¿Algún comentario adicional?</text>
        </question>
    </questions>
</survey>
